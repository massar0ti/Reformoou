<div class="container">
    <input type="text" id="input" placeholder="Digite para filtrar..." autocomplete="off" />
    <ul id="options" class="options-list"></ul>
    <ul id="selected-options" class="selected-options-list"></ul> <!-- Adicionado para exibir as opções selecionadas -->
</div>




.container {
width: 530px;
margin: -15px -10px -10px;
